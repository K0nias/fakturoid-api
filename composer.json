{
  "name": "k0nias/fakturoid-api",
  "description": "Unoffical Fakturoid.cz PHP API wrapper",
  "keywords": ["fakturoid", "api"],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Vladimir Zapletal",
      "email": "vlad.zapletal@gmail.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "ext-curl": "*",
    "ext-json": "*"
  },

  "autoload": {
    "psr-4": {
      "K0nias\\FakturoidApi\\": "src/"
    }
  },

  "require-dev": {
    "phpunit/phpunit": "^6.5",
    "phpstan/phpstan-shim": "^0.9.2",
    "squizlabs/php_codesniffer": "^3.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "consistence/coding-standard": "^3.5"
  },

  "scripts": {
    "test": "composer phpunit && composer phpstan && composer phpcs",
    "phpunit": "vendor/bin/phpunit --verbose",
    "phpstan": "vendor/bin/phpstan.phar --level=max analyse src",
    "phpcs": "vendor/bin/phpcs"
  }
}
